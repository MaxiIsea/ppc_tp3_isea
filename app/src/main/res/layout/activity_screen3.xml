<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Lighter_Grey"
    tools:context=".Screen3Activity">

    <ScrollView
        android:layout_width="407dp"
        android:layout_height="637dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Photo1"
                android:layout_width="match_parent"
                android:layout_height="287dp"
                android:contentDescription="@string/imagedescr"
                app:srcCompat="@drawable/imageppc6" />

            <Button
                android:id="@+id/button_Photo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Lightest_Blue"
                android:textColor="@color/white"
                android:text="@string/send" />

            <ImageView
                android:id="@+id/Photo2"
                android:layout_width="match_parent"
                android:layout_height="287dp"
                android:contentDescription="@string/imagedescr"
                app:srcCompat="@drawable/imageppc5" />

            <Button
                android:id="@+id/button_Photo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Lightest_Blue"
                android:textColor="@color/white"
                android:text="@string/send" />

            <ImageView
                android:id="@+id/Photo3"
                android:layout_width="match_parent"
                android:layout_height="287dp"
                android:contentDescription="@string/imagedescr"
                app:srcCompat="@drawable/imageppc4" />

            <Button
                android:id="@+id/button_Photo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Lightest_Blue"
                android:textColor="@color/white"
                android:text="@string/send" />

            <ImageView
                android:id="@+id/Photo4"
                android:layout_width="match_parent"
                android:layout_height="287dp"
                android:contentDescription="@string/imagedescr"
                app:srcCompat="@drawable/imageppc3" />

            <Button
                android:id="@+id/button_Photo4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Lightest_Blue"
                android:textColor="@color/white"
                android:text="@string/send" />

            <ImageView
                android:id="@+id/Photo5"
                android:layout_width="wrap_content"
                android:layout_height="287dp"
                android:contentDescription="@string/imagedescr"
                app:srcCompat="@drawable/imageppc2" />

            <Button
                android:id="@+id/button_Photo5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Lightest_Blue"
                android:textColor="@color/white"
                android:text="@string/send" />

            <ImageView
                android:id="@+id/Photo6"
                android:layout_width="match_parent"
                android:layout_height="287dp"
                android:contentDescription="@string/imagedescr"
                app:srcCompat="@drawable/imageppc1" />

            <Button
                android:id="@+id/button_Photo6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Lightest_Blue"
                android:textColor="@color/white"
                android:text="@string/send" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>